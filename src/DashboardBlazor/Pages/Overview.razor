@page "/overview"
@inherits OverviewBase

<PageTitle>Overview - MessageFlowLab</PageTitle>

<div class="content-header">
    <h1>System Overview</h1>
    <p>Real-time monitoring of message flow and system health</p>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card stats-card">
            <div class="stats-card-icon" style="background: rgba(52, 152, 219, 0.1); color: var(--primary-color)">
                <span class="oi oi-envelope-closed"></span>
            </div>
            <div class="stats-card-content">
                <p>Total Messages</p>
                <h3>@TotalMessages.ToString("N0")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stats-card">
            <div class="stats-card-icon" style="background: rgba(46, 204, 113, 0.1); color: var(--secondary-color)">
                <span class="oi oi-pulse"></span>
            </div>
            <div class="stats-card-content">
                <p>RabbitMQ Queues</p>
                <h3>@QueueCount.ToString("N0")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stats-card">
            <div class="stats-card-icon" style="background: rgba(241, 196, 15, 0.1); color: var(--warning-color)">
                <span class="oi oi-signal"></span>
            </div>
            <div class="stats-card-content">
                <p>Kafka Topics</p>
                <h3>@TopicCount.ToString("N0")</h3>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title mb-0">System Status</h5>
                    <p class="text-muted mb-0">Last updated: @DateTime.Now.ToString("HH:mm:ss")</p>
                </div>
                <button class="btn btn-primary d-flex align-items-center gap-2" @onclick="Load">
                    <span class="oi oi-reload"></span>
                    Refresh Data
                </button>
            </div>
        </div>
    </div>
</div>
