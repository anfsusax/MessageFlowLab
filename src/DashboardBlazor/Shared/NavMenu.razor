<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <i class="oi oi-flow-switch brand-icon"></i>
            MessageFlowLab
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-category">MONITORING</div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="overview">
                <span class="oi oi-dashboard" aria-hidden="true"></span> Overview
            </NavLink>
        </div>

        <div class="nav-category">MESSAGE BROKERS</div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="rabbitmq">
                <span class="oi oi-pulse" aria-hidden="true"></span> RabbitMQ
                <span class="status-indicator active"></span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="kafka">
                <span class="oi oi-signal" aria-hidden="true"></span> Kafka
                <span class="status-indicator active"></span>
            </NavLink>
        </div>

        <div class="nav-category">ANALYSIS</div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="logs">
                <span class="oi oi-document" aria-hidden="true"></span> Message Logs
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
